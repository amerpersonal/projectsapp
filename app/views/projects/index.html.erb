<div class="row-fluid">
  <div class="col-sm-8 col-md-8">

    <% if @projects.empty? %>
      <div class="row no-projects">No projects for selected criteria. Maybe you want to create one</div>
    <% end %> 

    <% @projects.each do |project| %>
    <%= render partial: "project", locals: {project: project} %>
    <% end %>
  
  </div>

  <% if user_signed_in? %>
    <div class="col-sm-2 col-sm-offset-2 col-md-3 col-md-offset-1 add-project-section">
        <h4>Add new project</h4>
        <%= render partial: "form", locals: {project: flash[:project].nil? ? Project.new : Project.create(flash[:project])} %>
    </div>
  <% end %>

</div>
